<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create New Poll</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3 my-5">
          <div class="card card-body">
            <h4>Create A New Poll</h4>
            <form action="/create" method="post">
              <div class="form-group">
                <label class="my-2" for="title">Enter Title</label>
                <input
                  type="text"
                  name="title"
                  id="title"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label class="my-2" for="description">Enter Description</label>
                <textarea
                  name="description"
                  id="description"
                  class="form-control"
                ></textarea>
              </div>
              <div id="options">
                <p class="my-2">Enter Your Options</p>
                <div class="form-group">
                  <input
                    type="text"
                    name="options"
                    id="option1"
                    class="form-control my-2"
                    placeholder="option 1"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="text"
                    name="options"
                    id="option2"
                    class="form-control my-2"
                    placeholder="option 2"
                  />
                </div>
              </div>
              <button class="btn btn-secondary btn-sm my-2" id="addOption">
                Add More Option
              </button>
              <input
                type="submit"
                value="Create A New Poll"
                class="btn btn-primary"
              />
            </form>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>

    <script>
      let options = document.getElementById('options');
      let addOption = document.getElementById('addOption');

      let currentOptionNumber = 3;

      addOption.addEventListener('click', (e) => {
        e.preventDefault();

        let option = createNewOption();

        options.appendChild(option);
      });

      function createNewOption() {
        let div = document.createElement('div');
        div.className = 'form-group';

        let input = document.createElement('input');
        input.type = 'text';
        input.name = 'options';
        input.placeholder = `Option ${currentOptionNumber++}`;
        input.className = 'form-control my-2';

        div.appendChild(input);

        return div;
      }
    </script>
  </body>
</html>
